<Window x:Class="ChartFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChartFinder"
        mc:Ignorable="d"
        Title="Chart Finder" Height="450" Width="800"
        Closed="MainWindow_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Button Name="Folders" Click="folders_Click">Add Search Folders..</Button>
        <!-- <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                    HorizontalAlignment="Center">
        <ComboBox Name="Difficulty" Text="Any Difficulty" SelectionChanged="difficulty_Changed"
                  Width="180" Height="25" IsEditable="True" IsReadOnly="True"/>
        <CheckBox Content="Show All Songs" VerticalAlignment="Center" Margin="40, 0, 0, 0"
                  Click="AllSongs_Click" />
        </StackPanel> -->
        <Button Grid.Row="0" Grid.Column="1" Name="Run" Click="run_Click" IsEnabled="False">Scan Library!</Button>
        <Button Grid.Row="0" Grid.Column="2" Name="FixDatabase" Click="run_Databasefixer" IsEnabled="False">Fix Database</Button>
        <DataGrid Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" ItemsSource="{Binding}"
                  AutoGenerateColumns="False" IsReadOnly="True" Name="OutputGrid"
                  AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}">
            <DataGrid.Columns>
              <DataGridTextColumn Header="#" Binding="{Binding AlternationIndex,
                  RelativeSource={RelativeSource AncestorType=DataGridRow}}"/>
              <DataGridTextColumn Header="Artist" Binding="{Binding Artist, Mode=OneWay}" />
              <DataGridTextColumn Header="Title" Binding="{Binding Title, Mode=OneWay}" />
              <DataGridCheckBoxColumn Header="Has BRE" Binding="{Binding HasBRE, Mode=OneWay}" />
              <DataGridCheckBoxColumn Header="Guitar" Binding="{Binding HasGuitarLane, Mode=OneWay}" />
              <DataGridCheckBoxColumn Header="Bass" Binding="{Binding HasBassLane, Mode=OneWay}"/>
              <DataGridCheckBoxColumn Header="Drums" Binding="{Binding HasDrumsLane, Mode=OneWay}" />
              <DataGridCheckBoxColumn Header="Keys" Binding="{Binding HasKeysLane, Mode=OneWay}" />
              <DataGridCheckBoxColumn Header="Pro Keys" Binding="{Binding HasProKeysLane, Mode=OneWay}" />
              <DataGridTextColumn Header="Source" Binding="{Binding Source, Mode=OneWay}" />
              <!-- <DataGridTextColumn Header="Chart Hash" Binding="{Binding Hash}"/> -->
          </DataGrid.Columns>
        </DataGrid>
        <!-- In row 2 we can add a status bar -->
        <StatusBar Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3">
            <StatusBarItem>
                <TextBlock Name="StatusText">Waiting for input...</TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" Margin="0, 0, 60, 0">
                <ProgressBar Width="100" Height="20" Name="ProgressBar" Visibility="Hidden"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
